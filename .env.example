# Viral Daily - Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# ===================================
# DATABASE CONFIGURATION
# ===================================
MONGO_URL="mongodb://localhost:27017"
DB_NAME="viral_daily_production"

# ===================================
# YOUTUBE API CONFIGURATION
# ===================================
# Get from: https://console.developers.google.com/
YOUTUBE_API_KEY="your_youtube_api_key_here"

# ===================================
# TWITTER API CONFIGURATION  
# ===================================
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN="your_twitter_bearer_token_here"

# ===================================
# TIKTOK API CONFIGURATION (Future)
# ===================================
TIKTOK_ACCESS_TOKEN="your_tiktok_access_token_here"

# ===================================
# PAYPAL PAYMENT CONFIGURATION
# ===================================
# Get from: https://developer.paypal.com/developer/applications/
PAYPAL_CLIENT_ID="your_paypal_client_id_here"
PAYPAL_CLIENT_SECRET="your_paypal_client_secret_here"
PAYPAL_MODE="sandbox"  # Change to "live" for production

# ===================================
# EMAIL SERVICE CONFIGURATION
# ===================================
# Get from: https://sendgrid.com/
SENDGRID_API_KEY="your_sendgrid_api_key_here"
SENDER_EMAIL="your_verified_sender_email@domain.com"

# ===================================
# FRONTEND CONFIGURATION
# ===================================
# Backend URL for API calls
REACT_APP_BACKEND_URL="http://localhost:8001"

# WebSocket configuration for development
WDS_SOCKET_PORT=443

# ===================================
# SECURITY CONFIGURATION
# ===================================
# Generate a secure random string for JWT tokens
JWT_SECRET="your_jwt_secret_key_here"

# ===================================
# DEPLOYMENT CONFIGURATION
# ===================================
# Environment setting
NODE_ENV="development"  # Change to "production" for live deployment

# ===================================
# OPTIONAL: ANALYTICS CONFIGURATION
# ===================================
# For future analytics integration
GOOGLE_ANALYTICS_ID="your_google_analytics_id_here"
MIXPANEL_TOKEN="your_mixpanel_token_here"

# ===================================
# OPTIONAL: FUTURE INTEGRATIONS
# ===================================
# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"

# Twilio (for WhatsApp/SMS)
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"